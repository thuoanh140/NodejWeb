<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cập nhật thông tin nhân viên</title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
    <div class="container">
        <div class="row">
            <form action="/put-crud" method="POST">
                <div class="form-row">
                    <div class="col-12 mt-3"><b>Cập nhật thông tin nhân viên</b></div>
                    <div class="form-group col-md-6">
                        <label for="inputEmail4">Họ tên:</label>
                        <input type="text" class="form-control" name="ten_nv" placeholder="Họ tên"
                            value="<%= staff.ten_nv %>">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputEmail4">Ngày sinh</label>
                        <input type="date" class="form-control" name="ngay_sinh" placeholder="Ngày sinh"
                            value="<%= staff.ngay_sinh %>">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputAddress">Địa chỉ</label>
                    <input type="text" class="form-control" name="dia_chi" placeholder="Ninh Kiều, Cần Thơ"
                        value="<%= staff.dia_chi %>">
                </div>
                <div class="form-row">
                    <!-- <div class="form-group col-md-6">
                        <label for="inputCity">Ảnh đại diện</label>
                        <input type="file" class="form-control" name="anh_dai_dien" value="<%= staff.anh_dai_dien %>">
                    </div> -->
                    <div class="form-group col-md-6">
                        <label for="inputState">Giới tính</label>
                        <select class="form-control" name="gioi_tinh">
                            <option value="1">Nam</option>
                            <option value="0">Nữ</option>
                        </select>
                    </div>
                </div>
                <input name="id" value="<%= staff.id %>" type="text" hidden />
                <button type="submit" class="btn btn-primary">Cập nhật</button>
            </form>
        </div>
    </div>
</body>

</html>